{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "dom",
            "es6"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "newLine": "lf"
    },
    "exclude": [
        "./dist",
        "./node_modules"
    ]
}